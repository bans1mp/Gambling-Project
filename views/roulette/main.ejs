<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

<body>
    <h1>Roulette</h1>
    <h2 id="value">
        Starting soon...
    </h2>

    <script>
        function updateRes() {
            let res;
            const rand = Math.floor((Math.random() * 15) + 1);
            if (rand === 1) {
                res = "Jackpot";
            }
            else if (rand <= 8) {
                res = "A";
            }
            else {
                res = "B";
            }
            document.getElementById("value").innerHTML = res;
        }

        setInterval(updateRes, 2000)
    </script>
</body>

</html>