<% layout('layouts/boilerplate')%>
    <h1>Roulette</h1>
    <h2 id="value">
        Starting soon...
    </h2>

    <script>
        function updateRes() {
            let res;
            const rand = Math.floor((Math.random() * 15) + 1);
            if (rand === 1) {
                res = "Jackpot";
            }
            else if (rand <= 8) {
                res = "A";
            }
            else {
                res = "B";
            }
            document.getElementById("value").innerHTML = res;
        }

        setInterval(updateRes, 2000)
    </script>